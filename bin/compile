#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

mkdir -p "$1/bin/"

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
	Darwin) sed -l "$c";;
	*)      sed -u "$c";;
  esac
}

WKHTMLTOPDF_SOURCE="http://ubuntu.cs.utah.edu/ubuntu/pool/universe/w/wkhtmltopdf/wkhtmltopdf_0.12.0-2_amd64.deb"
WKHTMLTOPDF_PATH="$1/bin/wkhtmltopdf_0.12.0-2_amd64.deb"

echo "-----> Transferring wkhtmltopdf binary"
curl $WKHTMLTOPDF_SOURCE -o $WKHTMLTOPDF_PATH

echo "-----> Setting permissions"
chmod +x $WKHTMLTOPDF_PATH

echo "-----> Extracting Debs"
ar x  "$1/bin/wkhtmltopdf_0.12.0-2_amd64.deb"

export HOME=$BUILD_DIR