#!/usr/bin/env bash

set -e

mkdir -p "$1/bin/"

WKHTMLTOPDF_SOURCE="http://ubuntu.cs.utah.edu/ubuntu/pool/universe/w/wkhtmltopdf/wkhtmltopdf_0.12.0-2_amd64.deb"
WKHTMLTOPDF_PATH="$1/bin/wkhtmltopdf.deb"

echo "-----> Transferring wkhtmltopdf binary"
curl $WKHTMLTOPDF_SOURCE -o $WKHTMLTOPDF_PATH

echo "-----> Setting permissions"
chmod +x $WKHTMLTOPDF_PATH

dpkg -i "$1/bin/wkhtmltopdf.deb"

exit 0