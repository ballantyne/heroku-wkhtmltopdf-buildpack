#!/usr/bin/env bash

# set -e            # fail fast
# set -o pipefail   # don't ignore exit codes when piping output
# set -x            # enable debugging

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

bp_dir=$(cd $(dirname $0); cd ..; pwd)

source $bp_dir/bin/common.sh

download () {
  status "Downloading and installing wkhtmltopdf"
  wkhtmltopdf_url="https://github.com/generalui/wkhtmltopdf-amd64/blob/0.12.0/bin/wkhtmltopdf-amd64?raw=true"
  curl -L $wkhtmltopdf_url -s -o $build_dir/wkhtmltopdf-amd64
}

install () {
	if [ -f /app/vendor/node/bin/wkhtmltopdf ]; then
	  exit 0
	else
	  download
  	  mkdir -p /app/vendor/node/bin/
	  mv $build_dir/wkhtmltopdf-amd64 /app/vendor/node/bin/wkhtmltopdf
	  chmod +x /app/vendor/node/bin/wkhtmltopdf
	fi
}

install

status "Writing profile script"
mkdir -p $build_dir/.profile.d

cat <<EOF >$build_dir/.profile.d/000_wkhtmltopdf.sh
export PATH="\$HOME/node/bin$PATH"
EOF

exit 0
