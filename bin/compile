#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

mkdir -p "$1/bin/"

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
	Darwin) sed -l "$c";;
	*)      sed -u "$c";;
  esac
}

WKHTMLTOPDF_SOURCE="https://github.com/wkhtmltopdf/wkhtmltopdf/archive/0.12.1.tar.gz"
WKHTMLTOPDF_PATH="$1/bin/wkhtmltopdf-0.12.1.tar.gz"

echo "-----> Transferring wkhtmltopdf binary"
curl $WKHTMLTOPDF_SOURCE -o $WKHTMLTOPDF_PATH

echo "-----> Extracting the tar.gz file"
tar -zxvf $WKHTMLTOPDF_PATH
